---
import "../../index.css";
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/common/Navbar.astro";
import HeroWebDev from "../../components/web-development/HeroWebDev.astro";
import Experience from "../../components/home/Experience.astro";
import OurServices from "../../components/home/OurServices.astro";
import Accordion from "../../components/common/Accordion.astro";
import SwiperSection from "../../components/common/SwiperSection.astro";
import { webDevSwiperCards } from "../../data/swipers";
---

<Layout title="Home - Nixxon Tech">
  <Navbar />
  <HeroWebDev />
  <Experience
    typewriter="Engineering Digital Excellence"
    experience="We create websites that embody elegance, performance, and precision. With every detail refined and every interaction seamless, Nixxon Australia turns your vision into a digital experience that endures and elevates."
  />
  <OurServices
    title="Our Standard"
    description="Crafting excellence across leading web platforms and technologies."
  />
  <SwiperSection
    title="The Art of Web Development"
    description="We blend creativity with technology to build websites that are not only functional but also inspiring crafted to engage, perform, and grow with your business."
    swiperCards={webDevSwiperCards}
  />
  <Accordion />
</Layout>
