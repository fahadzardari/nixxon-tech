---
import HeroArt from "../../assets/mobile-application.png";
import CommonButton from "../common/CommonButton.astro";
import Image from "astro/components/Image.astro";
---

<section
  class="hero-section relative min-h-screen overflow-hidden bg-[#4B00A3] pt-32 text-white lg:ml-[65px] lg:rounded-l-3xl xl:ml-[88px]"
>
  <div
    class="flex h-full flex-col justify-between pt-8 lg:flex-row lg:pl-12 xl:pt-12 2xl:pl-20"
  >
    <!-- Left -->
    <div
      class="3xl:w-[60%] z-10 w-full px-6 lg:mt-auto lg:w-[95%] lg:pb-24 2xl:w-[85%] 2xl:pb-40"
    >
      <!-- <span class="mb-4 block h-[2px] w-10 bg-white"></span> -->
      <h1
        class="mb-6 text-[32px] font-medium capitalize md:text-[42px] lg:text-[66px] lg:leading-[80px] xl:text-[80px] xl:leading-[90px] 2xl:text-[86px] 2xl:leading-[100px]"
      >
        Turning complex challenges into beautifully engineered
        <span class="font-bold">applications</span>.
      </h1>
      <p
        class="mb-4 text-sm font-medium tracking-[1px] lg:mb-8 lg:text-base xl:text-xl 2xl:text-xl 2xl:leading-6"
      >
        We build intuitive iOS and Android applications that drive business
        growth and scalability. By combining the latest technologies with real
        user insights, our skilled developers craft apps that deliver seamless
        functionality and exceptional user experiences. From concept to launch,
        our solutions are designed to accelerate your digital journey and
        empower your business in the competitive marketplace.
      </p>
      <div class="flex items-center space-x-4">
        <CommonButton className="text-xs font-semibold md:text-sm lg:text-lg">
          Lets Talk
        </CommonButton>
      </div>
    </div>

    <!-- Right -->
    <div
      class="z-0 w-full lg:absolute lg:right-0 lg:bottom-0 lg:w-[90%] xl:w-2/3"
    >
      <Image
        id="hand-tilt"
        src={HeroArt}
        alt="Hand Image"
        class="cursor-pointer"
      />
    </div>
  </div>
</section>

<script>
  // import { gsap, ScrollTrigger } from "../../utils/gsapUtils.js";

  document.addEventListener("DOMContentLoaded", () => {
    // Hand tilt effect (keep your existing code)
    const hand = document.getElementById("hand-tilt");
    if (hand) {
      hand.style.transition = "transform 0.3s";
      hand.addEventListener("mouseenter", () => {
        hand.style.transform = "scale(1.08)";
      });
      hand.addEventListener("mousemove", (e) => {
        const rect = hand.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        const rotateX = ((y - centerY) / centerY) * 18;
        const rotateY = ((x - centerX) / centerX) * 18;
        hand.style.transform = `scale(1.08) rotateX(${-rotateX}deg) rotateY(${rotateY}deg)`;
      });
      hand.addEventListener("mouseleave", () => {
        hand.style.transition = "transform 0.5s";
        hand.style.transform = "scale(1) rotateX(0deg) rotateY(0deg)";
        setTimeout(() => {
          hand.style.transition = "transform 0.3s";
        }, 500);
      });
    }

