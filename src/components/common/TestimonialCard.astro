---
import DefaultImage from "../../assets/home/testimonials/1.png";
import Image from "astro/components/Image.astro";
const { name, details, description, avatar, class: className } = Astro.props;
---

<article
  class={`testimonial-card font-roboto mx-auto flex max-w-xl flex-col lg:min-w-[250px] xl:min-w-[330px] 2xl:min-w-[380px] 3xl:min-w-[450px] lg:min-h-[380px] 2xl:min-h-[408px] rounded-2xl bg-[#f8f8f8] p-8 ${className}`}
>
  <Image
    src={DefaultImage}
    alt={name}
    class="mx-auto mb-6 h-20 w-20 rounded-full object-cover shadow"
    loading="lazy"
  />
  <p
    class="mb-4 text-xs leading-4 font-medium text-[#666666] md:text-sm xl:leading-6 2xl:text-base 2xl:leading-8"
  >
    {description}
  </p>
  <div class="mt-auto w-full text-[10px] md:text-xs 2xl:text-sm 2xl:leading-5">
    <span class="text-gradient-start mb-1 block font-bold">{name}</span>
    <span
      class="block text-[10px] font-medium text-[#666666] md:text-xs lg:text-sm"
      >{details}</span
    >
  </div>
</article>

<style>
  article {
    box-shadow:
      0 2px 6px rgba(0, 0, 0, 0.06),
      0 8px 20px rgba(0, 0, 0, 0.08);
    transition: box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  /* article:hover {
    box-shadow: 0 8px 32px rgba(128, 103, 206, 0.12);
  } */
</style>
