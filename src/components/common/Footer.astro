  .social-icon:hover svg path:first-of-type {
    transition: fill 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    fill: #fff !important;
  }

  .social-icon:hover svg path:not(:first-of-type) {
    transition: fill 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    fill: url(#paint0_linear_1_1567) !important;
    /* Adjust gradient id for each SVG as needed */
  }

  .social-icon:hover svg {
    transition: filter 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    filter: drop-shadow(0 0 3px #9d7eff);
  }

  .chat-cta-text {
    letter-spacing: 2px;
    transition:
      background-position 0.5s cubic-bezier(0.4, 0, 0.2, 1),
      text-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background-size: 200% 100%;
    background-position: 0% 50%;
  }

  .chat-cta:hover .chat-cta-text,
  .chat-cta:focus .chat-cta-text,
  .chat-cta:active .chat-cta-text {
    background-position: 100% 50%;
    text-shadow:
      0 4px 24px #9d7eff55,
      0 1px 0 #fff;
    transform: scale(1.025) rotate(-1deg);
  }

  .chat-cta-arrow {
    transition:
      transform 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      filter 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .chat-cta:hover .chat-cta-arrow,
  .chat-cta:focus .chat-cta-arrow,
  .chat-cta:active .chat-cta-arrow {
    transform: translateX(18px) scale(1.12) rotate(8deg);
    filter: drop-shadow(0 0 8px #9d7eff88);
    /* subtle glow */
  }

  @media (max-width: 900px) {
    .chat-cta-text {
      font-size: 48px;
    }
  }
</style>
