---
const { title, description, icon, bgArt, className } = Astro.props;
import Image from "astro/components/Image.astro";
---

<article
  class={` cursor-pointer relative process-card bg-gradient-start  flex 2xl:min-w-[300px] 2xl:min-h-[288px]  flex-col rounded-[30px] p-6 text-white ${className}`}
>
  <Image src={icon} alt={title} width={52} height={52} class="mb-6" />
  <h3 class="mb-5 text-xl xl:text-2xl 2xl:text-[28px] leading-4 2xl:leading-6 font-semibold capitalize">
    {title}
  </h3>
  <p class="text-sm 2xl:text-base capitalize">
    {description}
  </p>
  {
    bgArt && (
      <Image
        src={bgArt}
        alt=""
        class="pointer-events-none absolute right-0 bottom-0 z-0 ml-6 w-4/5 select-none"
        aria-hidden="true"
        draggable={false}
      />
    )
  }
</article>
