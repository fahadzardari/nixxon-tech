---
const { title, description, icon, bgArt } = Astro.props;
import Image from "astro/components/Image.astro";
---

<article
  class="hover:scale-105 cursor-pointer relative bg-gradient-start flex min-w-[300px] min-h-[288px] flex-col rounded-[30px] p-6 text-white"
>
  <Image src={icon} alt={title} width={52} height={52} class="mb-6" />
  <h3 class="mb-5 text-[28px] leading-6 font-semibold capitalize">
    {title}
  </h3>
  <p class="text-base capitalize">
    {description}
  </p>
  {
    bgArt && (
      <Image
        src={bgArt}
        alt=""
        class="absolute w-4/5 ml-6 bottom-0 right-0 pointer-events-none select-none"
        aria-hidden="true"
        draggable={false}
      />
    )
  }
</article>
